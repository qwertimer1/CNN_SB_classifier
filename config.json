{
    "name": "Seabed",
    "cuda": true,
    "gpu": 0,
    "data_loader": {
        "type": "ImageDataLoader",
        "data_dir": "datasets/",
        "batch_size": 32,
        "shuffle": true
    },
    "validation": {
        "validation_split": 0.2,
        "shuffle": true
    },

    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 1,
    "lr_scheduler": {
            "gamma": 0.8685113737513527
    },
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": "NLLLoss",
    "loss_args": {
        "reduction": "elementwise_mean"
    },
    "metrics": ["my_metric", "my_metric2"],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    },
    "arch": "seabedmodel", 
    "model": {

    }
}
